<a id="logo" href="/"><img src="@Url.Content("~/Content/images/sizeup.png")" alt="SizeUp Logo"/></a>
@if(!ViewBag.Header.HideMenu){
<div id="menu">
<ul>
@if(!ViewBag.Header.HideNavigation){
<li><a href="#" class="@(ViewBag.Header.ActiveTab == SizeUp.Web.Models.NavItems.Dashboard ? "disabled" : "")" >My Business</a></li>
<li><span>|</span></li>
<li><a href="#" class="@(ViewBag.Header.ActiveTab == SizeUp.Web.Models.NavItems.Competition ? "disabled" : "")">Competition</a></li>
<li><span>|</span></li>
<li><a href="#" class="@(ViewBag.Header.ActiveTab == SizeUp.Web.Models.NavItems.Advertising ? "disabled" : "")">Advertising</a></li>
<li><span>|</span></li>
<li class="lastMenuItem"><a href="#" class="@(ViewBag.Header.ActiveTab == SizeUp.Web.Models.NavItems.TopPlaces ? "disabled" : "")">Top Places</a></li>
}
@if(SizeUp.Core.Identity.Identity.CurrentUser==null){
<li><a href="/user/signin/?returnurl=@Server.UrlEncode(Request.Url.PathAndQuery)">Sign In</a></li>
}else{
<li><a href="/user/signout/?returnurl=@Server.UrlEncode(Request.Url.PathAndQuery)">Sign Out (@SizeUp.Core.Identity.Identity.CurrentUser.DisplayName)</a></li>
}
</ul>
</div>
}

