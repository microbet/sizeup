@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
<title>SizeUp - User Profile</title>
<link href="@Url.Content("~/Content/views/signin.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/views/signin.js")"></script>
}

<h1>Returning users</h1>
<p class="details">Please enter your e-mail address and password.</p>

<form id="signinForm" action="/signin/?returnurl=@Request.QueryString["returnurl"]" method="post">
    <ul id="form">
        <li>
            <label for="emailBox">Email:</label>
            <input id="emailBox" type="text" name="email" value="@ViewBag.Email" />
            <span id="emailRequired" class="error hidden" title="Email is required">*</span>
            <span id="emailInvalid" class="error hidden" title="A valid email address is required">*</span>
        </li>
        <li>
            <label for="passwordBox">Password:</label>
            <input id="passwordBox" type="password" name="password" />
            <span id="passwordRequired" class="error hidden" title="Password is required">*</span>
        </li>
    </ul>

    <ul id="sidebar">
        @if(ViewBag.InvalidPassword){
        <li>
            <p class="info error">Incorrect password. Try again or <a href="#">reset your password</a></p>
        </li>
        }
        @if(ViewBag.LockedOut){
        <li>
            <p class="error">This account has been locked out.  Please contact support for assistance.</p>
        </li> 
        }
        @if(ViewBag.NotActive){
        <li>
            <p class="error">Please verify your e-mail address by clicking the <strong>verify</strong> link in the welcome e-mail you received.</p>
        </li>
        }
        @if(ViewBag.PasswordReset){
        <li>
            <p class="error">We've sent you a password reset e-mail. Please open it to complete resetting your password.</p>
        </li> 
        } 
        <li>
            <p class="info">No account? No problem! Click to <a href="/register/?returnurl=@Request.QueryString["returnurl"]">register</a>. It's free and takes only moments.</p>
        </li>
    </ul>

    <div id="submitContainer">
        <label for="persistSignin">Keep me signed in</label>
        <input id="persistSignin" type="checkbox" name="persist" />
        <input type="submit" class="hidden" value="Sign In" />
        <a href="javascript:void(0)" id="signin" class="button">Sign In</a>
    </div>
</form>

@section scripts{
    <script type="text/javascript">

    var driver = new sizeup.views.signin();
    </script>
}

