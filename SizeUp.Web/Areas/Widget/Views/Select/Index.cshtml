@{
    Layout = "~/Areas/Widget/Views/Shared/_Layout.cshtml";
}

@section head{
<link href="@Url.Content("~/Areas/Widget/Content/Views/select/select.css")" rel="stylesheet" type="text/css" />

<script type="text/javascript" src="@Url.Content("~/Scripts/core/data.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/widget/views/select/select.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/controls/industrySelector.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/controls/placeSelector.js")"></script>
<title>Select your city and industry</title>
}

<div id="select">
    <div id="form" class="hidden">
        <h2>Select a city and industry</h2>
        <ul>
            <li>
                <p id="noIndustryMatchesMessage" class="info hidden">No industry matched your keyword. Please search again and select from the dropdown.</p>
                <p id="noDataMessage" class="info hidden">There is not enough data for your industry in that city.<br />Please try a more common industry or a larger city.</p>
                <label for="searchIndustry">Industry</label>
                <input type="text" id="searchIndustry" class="blank" value="e.g. Beauty Salons"  />
            </li>
            <li>
                <label for="searchCommunity">City</label>
                <input type="text" id="searchCommunity" class="blank" value="Enter Your City" />
                <p id="invalidCityMessage" class="info hidden">Please enter a valid city name.</p>
            </li>
        </ul>
        <a href="javascript:void(0);" id="continue" class="button" >Submit</a>
    </div>

    <div id="selector" class="hidden">
        <ul>
            <li>
                <img src="@Url.Content("~/Content/images/mybusiness.png")" alt="My Business" />
                <a href="#" id="myBusiness" class="button medium" >My Business</a>
                <p>Compare your business to your industry competitors.</p>
            </li>
            <li>
                <img src="@Url.Content("~/Content/images/compete.png")" alt="Competition" />
                <a href="#" id="competition" class="button medium" >Competition</a>
                <p>Map your competitors, customers, and suppliers.</p>
            </li>
            <li>
                <img src="@Url.Content("~/Content/images/advertise.png")" alt="Advertising" />
                <a href="#" id="advertising" class="button medium" >Advertising</a>
                <p>Find best places to target your next advertising campaign.</p>
            </li>
        </ul>
    </div>
</div>



@section scripts{

    <script type="text/javascript">
    var driver = new sizeup.widget.views.select.select();
    </script>


}